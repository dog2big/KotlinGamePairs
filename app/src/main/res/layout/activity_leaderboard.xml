<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/textViewLeaderboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/belgrano"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="@string/title_leaderboard"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTitleRating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/belgrano"
            android:gravity="center"
            android:text="@string/title_rating"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTitleName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/belgrano"
            android:gravity="center"
            android:text="@string/title_name"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTitleAttempts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/belgrano"
            android:gravity="center"
            android:text="@string/title_attempts"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.go.kotlingamepairs.FragmentListLeaderboard"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

</LinearLayout>